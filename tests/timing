
# run timing comparisons between riposte and R.
# should clean this up and run it regularly, tracking performance difference
# right now, riposte suffers a big hit just loading R to do the parsing.
# getting rid of that dependency makes riposte look substantially better.

echo "test	program	time"

echo "Local variable assignment	" "rip	" `(time ../riposte -q -f local_variable_assign.R) 2>&1 | grep real | awk '{print $2}'`
echo "Local variable assignment	" "R	" `(time R --vanilla -q --slave -f local_variable_assign.R) 2>&1 | grep real | awk '{print $2}'`

echo "Local variable lookup	" "rip	" `(time ../riposte -q -f local_variable_lookup.R) 2>&1 | grep real | awk '{print $2}'`
echo "Local variable lookup	" "R	" `(time R --vanilla -q --slave -f local_variable_lookup.R) 2>&1 | grep real | awk '{print $2}'`

echo "Simple addition	" "rip	" `(time ../riposte -q -f addition.R) 2>&1 | grep real | awk '{print $2}'`
echo "Simple addition	" "R	" `(time R --vanilla -q --slave -f addition.R) 2>&1 | grep real | awk '{print $2}'`

echo "Fibonacci	" "rip	" `(time ../riposte -q -f fib.R) 2>&1 | grep real | awk '{print $2}'`
echo "Fibonacci	" "R	" `(time R --vanilla -q --slave -f fib.R) 2>&1 | grep real | awk '{print $2}'`

echo "Function call	" "rip	" `(time ../riposte -q -f function_call.R) 2>&1 | grep real | awk '{print $2}'`
echo "Function call	" "R	" `(time R --vanilla -q --slave -f function_call.R) 2>&1 | grep real | awk '{print $2}'`

echo "Function call w/dots	" "rip	" `(time ../riposte -q -f function_call_dots.R) 2>&1 | grep real | awk '{print $2}'`
echo "Function call w/dots	" "R	" `(time R --vanilla -q --slave -f function_call_dots.R) 2>&1 | grep real | awk '{print $2}'`
